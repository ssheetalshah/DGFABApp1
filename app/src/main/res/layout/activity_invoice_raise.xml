<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4F4"
    android:orientation="vertical"
    tools:context=".InvoiceRaiseActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_Invp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="Invoice"
            android:textColor="#fff"
            android:textSize="18dp"
            android:typeface="serif" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bt_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Spinner
            android:id="@+id/repNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/invoiceview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:text="Invoice"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="1"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_weight="0.7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/paid_stamp" />

                <!--<android.support.v7.widget.CardView-->
                <!--android:layout_weight="0.5"-->
                <!--android:elevation="10dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="end"-->
                <!--&gt;-->

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/complogo" />

                <!--</android.support.v7.widget.CardView>-->

            </LinearLayout>

            <!---->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From" />

                    <TextView
                        android:id="@+id/fromsd"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nike India Ltd" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nike@gmail.com" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Andheri East Mumbai" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P:(123)4567890" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For" />

                    <TextView
                        android:id="@+id/tosd"
                        android:textColor="#000"
                        android:layout_marginBottom="3dp"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parag sharma" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="parag@gmail.com" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ragiv gandhi square" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#3F3E3E"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P:(099)8765432" />


                </LinearLayout>

            </LinearLayout>

            <!---->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:background="#A2A1A1"
                android:orientation="horizontal">

            </LinearLayout>

            <!---->

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:textSize="13dp"
                    android:textColor="#3F3E3E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Number   INV0004" />

                <TextView
                    android:textSize="13dp"
                    android:textColor="#3F3E3E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Date         08 April 2019" />

                <TextView
                    android:textSize="13dp"
                    android:textColor="#3F3E3E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Terms      Next Day" />

                <TextView
                    android:textSize="13dp"
                    android:textColor="#3F3E3E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Due          08 April 2019" />

            </LinearLayout>

            <!---->

            <LinearLayout
                android:weightSum="4"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_weight="0.8"
                    android:text="Description"
                    android:gravity="start"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1.1"
                    android:text="Price"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1.1"
                    android:text="Qty"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:text="Amount"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!---->

            <LinearLayout
                android:weightSum="4"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.8"
                    android:text="Lenovo Laptop"
                    android:gravity="start"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#3F3E3E"
                    android:layout_weight="1.1"
                    android:text="50,000"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#3F3E3E"
                    android:layout_weight="1.1"
                    android:text="2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#3F3E3E"
                    android:layout_weight="1"
                    android:text="1,00,000"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!---->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#A2A1A1"
                android:orientation="horizontal">

            </LinearLayout>

            <!---->

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="13dp"
                            android:text="Subtotal"
                            android:gravity="end"
                            android:textColor="#3F3E3E"
                            android:layout_weight="0.35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="13dp"
                            android:textColor="#3F3E3E"
                            android:text="Rs 10000"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="13dp"
                            android:text="Tax(7%)"
                            android:gravity="end"
                            android:textColor="#3F3E3E"
                            android:layout_weight="0.35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="13dp"
                            android:textColor="#3F3E3E"
                            android:text="Rs 200"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="13dp"
                            android:text="Total"
                            android:gravity="end"
                            android:textColor="#3F3E3E"
                            android:layout_weight="0.35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="13dp"
                            android:textColor="#3F3E3E"
                            android:text="Rs 1,00,000"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Balance Due"
                            android:gravity="end"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:layout_weight="0.35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="#000"
                            android:text="Rs 1000.93"
                            android:textSize="16dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="#A2A1A1"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:textSize="10dp"
                android:textColor="#3F3E3E"
                android:text="Thank you for your business!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>