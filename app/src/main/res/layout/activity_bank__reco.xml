                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Closing balance as per bank statement"
                    android:textColor="#000"
                    android:textSize="13dp" />

