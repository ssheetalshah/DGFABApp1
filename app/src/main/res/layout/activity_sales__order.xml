<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Boxes_Activities.Sales_Order">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sales Order"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="serif" />

    </android.support.v7.widget.Toolbar>

    <android.support.design.card.MaterialCardView

    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:padding="4dp"
            android:layout_margin="2dp"
            android:text="Company : Krishna Clothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </TextView>
        <TextView
            android:padding="4dp"
            android:layout_margin="2dp"
            android:text="Order No : 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        </TextView>
        <TextView
            android:padding="4dp"
            android:layout_margin="2dp"
            android:text="Area : Indore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        </TextView>

        <TextView
            android:padding="4dp"
            android:layout_margin="2dp"
            android:text="Day/Time : 1/5/2019 "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        </TextView>
        <TextView
            android:drawableStart="@drawable/iconsschedulemail24"
            android:padding="4dp"
            android:layout_margin="2dp"
            android:text="Delay: 15 days "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconsschedulemail24">


        </TextView>

    </LinearLayout>
</android.support.design.card.MaterialCardView>
    <android.support.design.card.MaterialCardView

        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="4dp"
                android:layout_margin="2dp"
                android:text="Company : Fast Track USA "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TextView>
            <TextView
                android:padding="4dp"
                android:layout_margin="2dp"
                android:text="Order No : 6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


            </TextView>
            <TextView
                android:padding="4dp"
                android:layout_margin="2dp"
                android:text="Area : USA San diego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


            </TextView>

            <TextView
                android:padding="4dp"
                android:layout_margin="2dp"
                android:text="Day/Time : 30/4/2019"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


            </TextView>
            <TextView
                android:drawableStart="@drawable/iconsschedulemail24"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:text="Delay : 25 days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconsschedulemail24">


            </TextView>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</LinearLayout>