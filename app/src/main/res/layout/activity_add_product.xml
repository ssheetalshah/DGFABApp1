                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="5dp"
                    android:text="Product Name"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dtdg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="Category"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dgsdfsdfsdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="Quality"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dgsdfghjghj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="Selling rate"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dgsdfsdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="Sub Category"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dgdfsd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="Dealer Rate"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dgsdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="ID"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dgasdasd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"

                    android:drawablePadding="5dp"
                    android:text="Consumer Rate"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/dg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:drawablePadding="5dp"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_bg"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/add_pro"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Product" />
        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Added Product History:"
            android:textSize="20dp"
            android:textStyle="normal" />

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/clickme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- ListRow Left sied Thumbnail image -->

            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="7dip"
                android:padding="2dip">

                <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="70dp"
                    android:layout_height="70dip"
                    android:src="@drawable/dd1"></ImageView>
            </LinearLayout>

            <!-- Title Of Song -->


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Best of Medecine"
                android:textColor="#040404"
                android:textSize="15dip"
                android:typeface="sans" />

            <LinearLayout
                android:id="@+id/cart_plus_minus_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from_name"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plist_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="0.23"
                    android:paddingRight="5dip"
                    android:text="Rs. 200"
                    android:textColor="#1d1d1d"
                    android:textSize="12dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/plist_weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:paddingRight="25dip"
                    android:text="100 gm"
                    android:textColor="#343434"
                    android:textSize="12dip" />

                <ImageView
                    android:id="@+id/cart_minus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cart_product_quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:text="1"
                    android:textSize="12dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cart_plus_img"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:foregroundGravity="left"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:src="@drawable/add" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/clickme1"
