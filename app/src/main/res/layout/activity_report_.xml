<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_rep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="Reports"
            android:textColor="#fff"
            android:textSize="18dp"
            android:typeface="serif" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Daily Sales Register"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />

            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Daily Purchase Register"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Cash and Bank"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Stock Summary"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />
            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Loans (Liability)"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />

            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Fixed Assets"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />

            <TextView
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center"
                android:text="Today Daybook"
                android:textColor="#fff"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:typeface="serif" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>